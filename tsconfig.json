{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node",
      "allowSyntheticDefaultImports" : true,
      "esModuleInterop" : true,
      "sourceMap": true,
      "inlineSources": true,
      "sourceRoot": "/",
      "typeRoots": ["./types", "./node_modules/@types"],
      "lib": [
        "dom",
        "es5",
        "scripthost",
        "es2015.promise"
      ]
    }
  }
